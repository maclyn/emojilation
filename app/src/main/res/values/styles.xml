<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
		<item name="colorControlNormal">@color/white</item>
		<item name="android:autoCompleteTextViewStyle">@style/CustomAutoCompleteStyle</item>
	</style>

	<style name="CustomAutoCompleteStyle" parent="Widget.AppCompat.AutoCompleteTextView">
		<item name="android:textAppearance">@style/CustomTextAppearance</item>
	</style>

	<style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Button" >
		<item name="android:textColor">@color/white</item>
	</style>
</resources>
